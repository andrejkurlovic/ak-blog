---
import BaseLayout from '../layouts/BaseLayout.astro'
import { SocialLinks } from '../consts'
import { Icon } from 'astro-icon/components'
import BlogCard from '../components/BlogCard.astro'
import { getCollection } from 'astro:content'

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 4)
---

<BaseLayout title="Andrej Kurlovic — CISO & DPO" description="Cybersecurity, leadership, and building with AI.">

  <!-- Hero -->
  <section class="app-container flex flex-col gap-12 justify-center py-36 md:py-48 pt-44 md:pt-56 relative">
    <div>
      <p class="block text-3xl opacity-70 mt-9 mb-4">Welcome to</p>
      <h1 class="text-8xl font-bold leading-none">Andrej Kurlovic</h1>
    </div>
    <p class="text-2xl max-w-2xl font-light leading-normal">
      CISO & DPO — I turn complex security into clear outcomes.
      Writing about cyber, leadership, and building with AI.
    </p>
    <div class="flex flex-wrap gap-8">
      {
        SocialLinks.map((link) => (
          <a
            class="text-xl text-primary dark:text-primary-dark underline hover:underline underline-offset-4"
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
          >
            {link.name}
          </a>
        ))
      }
    </div>
  </section>

  <!-- Recent Posts -->
  <section class="app-container">
    <h2 class="section-title">Recent Posts</h2>
    <div class="posts-grid-container">
      {posts.map((post) => <BlogCard post={post} />)}
    </div>
    <a class="btn-secondary" href="/blog/">
      Read All
      <Icon size={20} name="mdi:arrow-right" />
    </a>
  </section>

  <!-- About & Contact -->
  <section class="app-container py-42 grid lg:grid-cols-2 gap-28 lg:gap-10">
    <div class="space-y-6">
      <h2 class="section-title">About Me</h2>
      <p class="text-lg max-w-xl pb-4">
        I lead cybersecurity and data protection in fast-moving retail and logistics.
        Here I share practical lessons on resilience, culture, and AI-enabled security.
      </p>
      <a class="btn-secondary" href="/about/">
        Go to About
        <Icon size={20} name="mdi:arrow-right" />
      </a>
    </div>
    <div class="space-y-6">
      <h2 class="section-title">Get in touch</h2>
      <p class="text-lg max-w-xl">
        Use the buttons below for email and my resume.
      </p>
      <div class="flex flex-wrap mt-auto space-x-4">
        <a
          class="btn-primary"
          href="mailto:example@email.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          Get in touch
          <Icon height={20} name="mdi:email" />
        </a>
        <a
          class="btn-secondary"
          href="https://example.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          Download Resume
          <Icon height={20} name="mdi:arrow-collapse-down" />
        </a>
      </div>
    </div>
  </section>

</BaseLayout>
