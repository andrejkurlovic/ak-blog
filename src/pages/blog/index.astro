---
import { getCollection } from 'astro:content'
import BlogCard from '../../components/BlogCard.astro'
import BaseLayout from '../../layouts/BaseLayout.astro'

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<BaseLayout title="Blog — Andrej Kurlovic" description="Insights on cybersecurity, leadership, and building resilient teams.">
  <main class="app-container pt-36 md:pt-44">
    <h1 class="text-6xl md:text-7xl font-bold mb-6">Blog</h1>

    <p class="text-lg md:text-xl font-light leading-relaxed max-w-3xl">
      Practical reflections on cybersecurity, leadership, and culture — drawn from
      two decades of real-world experience.  
      I write about turning protection into performance, building trust through clarity,
      and helping people feel confident in security.
    </p>
  </main>

  <section class="app-container py-16">
    <h2 class="section-title">Latest Posts</h2>
    <ul class="posts-grid-container">
      {
        posts.map((post) => (
          <li>
            <BlogCard post={post} />
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
